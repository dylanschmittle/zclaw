# Seeed Studio XIAO ESP32-S3 Sense â€” board-specific overrides
# Layered on top of sdkconfig.defaults via SDKCONFIG_DEFAULTS

# --- Target ---
CONFIG_IDF_TARGET="esp32s3"

# --- Flash: 8MB ---
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="8MB"
# Override 4MB setting from base defaults
# CONFIG_ESPTOOLPY_FLASHSIZE_4MB is not set

# --- Custom partition table for 8MB ---
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="boards/xiao_esp32s3_sense/partitions_8mb.csv"

# --- PSRAM: 8MB octal SPI ---
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y

# --- Feature gates ---
CONFIG_ZCLAW_HAS_CAMERA=y
CONFIG_ZCLAW_HAS_MICROPHONE=y
CONFIG_ZCLAW_HAS_PSRAM=y

# --- Camera: OV2640 via DVP on XIAO S3 Sense ---
# Pin mapping for the XIAO ESP32-S3 Sense camera connector
CONFIG_ZCLAW_CAM_PIN_PWDN=-1
CONFIG_ZCLAW_CAM_PIN_RESET=-1
CONFIG_ZCLAW_CAM_PIN_XCLK=10
CONFIG_ZCLAW_CAM_PIN_SIOD=40
CONFIG_ZCLAW_CAM_PIN_SIOC=39
CONFIG_ZCLAW_CAM_PIN_D7=48
CONFIG_ZCLAW_CAM_PIN_D6=11
CONFIG_ZCLAW_CAM_PIN_D5=12
CONFIG_ZCLAW_CAM_PIN_D4=14
CONFIG_ZCLAW_CAM_PIN_D3=16
CONFIG_ZCLAW_CAM_PIN_D2=18
CONFIG_ZCLAW_CAM_PIN_D1=17
CONFIG_ZCLAW_CAM_PIN_D0=15
CONFIG_ZCLAW_CAM_PIN_VSYNC=38
CONFIG_ZCLAW_CAM_PIN_HREF=47
CONFIG_ZCLAW_CAM_PIN_PCLK=13

# --- Microphone: I2S PDM on XIAO S3 Sense ---
CONFIG_ZCLAW_MIC_PIN_CLK=42
CONFIG_ZCLAW_MIC_PIN_DATA=41

# --- GPIO safety: adjust for S3 pin range ---
CONFIG_ZCLAW_GPIO_MIN_PIN=1
CONFIG_ZCLAW_GPIO_MAX_PIN=21

# --- With more flash, we can afford WPA3 and higher log level ---
CONFIG_ESP_WIFI_ENABLE_WPA3_SAE=y
CONFIG_LOG_DEFAULT_LEVEL_DEBUG=y
# CONFIG_LOG_DEFAULT_LEVEL_INFO is not set
CONFIG_LOG_MAXIMUM_LEVEL_DEBUG=y
# CONFIG_LOG_MAXIMUM_LEVEL_INFO is not set
